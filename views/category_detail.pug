extends layout

block content

  h1 Category: #{category.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
      each book in category_books
        dt
          a(href=book.url) #{book.title}
        br
        dd #{book.summary}
        br

      else
        p This category has no books

  hr
  p
    a(href=category.url+'/delete') Delete category
  p 
    a(href=category.url+'/update') Update category