extends layout

block content
  h1= title

  ul
    each copy in copy_list
      li
        a(href=copy.url) #{copy.book.title} -
        if copy.status=='Available'
          p.available #{copy.status}
        else if copy.status=='Reserved'
          p.reserved #{copy.status}
        else if copy.status=='Loaned'
          p.loaned #{copy.status} 
          p Due back: #{copy.due_back_formatted}
        hr

    else
      li There are no book copies in the library.