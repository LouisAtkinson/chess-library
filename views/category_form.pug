extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Category: 
      input#name.form-control(type='text', placeholder='Strategy, tactics etc.' name='name' value=(undefined===category ? '' : category.name))
    br
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg